<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_background"
    android:orientation="vertical"
    android:padding="0dp">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvMessageDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp_04"
        android:paddingTop="@dimen/dp_16"
        android:text=""
        android:textColor="@color/colorGray33"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvMessageDialogContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:lineSpacingExtra="@dimen/dp_04"
        android:padding="@dimen/dp_12"
        android:text=""
        android:textColor="@color/colorGray66"
        android:textSize="@dimen/sp_14"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_01"
        android:background="@color/colorGrayCC"/>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0dp">

        <android.support.v7.widget.AppCompatButton
            android:id="@id/btnFinishAlert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_bl_dialog_left_button_background"
            android:padding="@dimen/dp_12"
            android:text="@string/zlCancel"
            android:textColor="@color/colorGray33"
            android:textSize="@dimen/sp_14"/>

        <View
            android:id="@+id/vMessageDialogVerticalDivider"
            android:layout_width="@dimen/dp_01"
            android:layout_height="match_parent"
            android:background="@color/colorGrayCC"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnMessageDialogSure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_bl_dialog_right_button_background"
            android:padding="@dimen/dp_12"
            android:text="@string/zlSure"
            android:textColor="@color/colorGray33"
            android:textSize="@dimen/sp_14"/>
    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>